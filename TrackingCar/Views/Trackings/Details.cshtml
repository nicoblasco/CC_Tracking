@model TrackingCar.Models.Tracking

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Estadisticas";
}

<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            Camaras
            <small>Detalle</small>
        </h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-dashboard"></i> Inicio</a></li>
            <li><a href="#">Camaras</a></li>
            <li class="active">Detalle General</li>
            <li class="active">Detalle</li>
        </ol>
    </section>
    <section class="content">
        <div>
            <hr />
            <dl class="dl-horizontal">
                <dt>
                    Número de Camara
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Camera.Numero)
                </dd>

                <dt>
                    Dirección
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Camera.Direccion)
                </dd>

                <dt>
                    Fecha y Hora
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.FechaHora)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.Velocidad) 
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Velocidad)
                </dd>

                <dt>
                    Máxima Velocidad
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Camera.Limite )
                </dd>
                <dt>
                    @Html.DisplayNameFor(model => model.Patente)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Patente)
                </dd>

                <dt>
                    Foto
                </dt>

                <dd>
                    <img src="@Url.Content("~/Content/img/JDF703.jpg")" alt="Image" class="img-thumbnail" width="400" height="400">
                </dd>
                
            </dl>
        </div>
        <p>
            @Html.ActionLink("Volver", "Estadisticas")
        </p>
        </section>
</div>