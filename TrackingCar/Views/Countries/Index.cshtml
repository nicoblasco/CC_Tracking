@model IEnumerable<TrackingCar.Models.Country>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Crear Pais";
}

<div class="content-wrapper">

    <p>
        @Html.ActionLink("Crear", "Create")
    </p>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Descripcion)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Descripcion)
                </td>
                <td>
                    @Html.ActionLink("Editar", "Edit", new { id = item.CountryID }) |
                    @Html.ActionLink("Detalle", "Details", new { id = item.CountryID }) |
                    @Html.ActionLink("Borrar", "Delete", new { id = item.CountryID })
                </td>
            </tr>
        }

    </table>
</div>