@model IEnumerable<TrackingCar.Models.City>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Ciudades";
}

<div class="content-wrapper">
    <h2>Index</h2>

    <p>
        @Html.ActionLink("Crear", "Create")
    </p>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Country.Descripcion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.State.Descripcion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Descripcion)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Country.Descripcion)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.State.Descripcion)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Descripcion)
                </td>
                <td>
                    @Html.ActionLink("Editar", "Edit", new { id = item.CityID }) |
                    @Html.ActionLink("Detalle", "Details", new { id = item.CityID }) |
                    @Html.ActionLink("Borrar", "Delete", new { id = item.CityID })
                </td>
            </tr>
        }

    </table>
</div>