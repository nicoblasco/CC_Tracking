@model TrackingCar.Models.City

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Borrar Ciudad";
}
<div class="content-wrapper">
    <h2>Delete</h2>

    <h3>¿Esta seguro que desea borrar la ciudad?</h3>
    <div>
        <h4>Ciudades</h4>
        <hr />
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.Country.Descripcion)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Country.Descripcion)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.State.Descripcion)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.State.Descripcion)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Descripcion)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Descripcion)
            </dd>

        </dl>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-actions no-color">
                <input type="submit" value="Borrar" class="btn btn-default" /> |
                @Html.ActionLink("Volver", "Index")
            </div>
        }
    </div>
</div>